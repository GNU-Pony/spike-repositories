from dragonsuite import *

i_use_info = get('I_USE_INFO', 'y').lower().startswith('y')
i_use_pdf  = get('I_USE_PDF',  'n').lower().startswith('y')
i_use_ps   = get('I_USE_PS',   'n').lower().startswith('y')
i_use_dvi  = get('I_USE_DVI',  'n').lower().startswith('y')
i_use_sh = get('I_USE_SH', 'bash:bash').lower()
if ':' not in i_use_sh:
    i_use_sh = i_use_sh + ':' + i_use_sh

pkgname = 'gates-of-tartaros'
pkgver = '1426432257'
pkgdesc = 'Extensible minimal replacement for agetty with SSH support'
upstream = 'https://github.com/GNU-Pony/gates-of-tartaros'
arch = ['any']
freedom = SOFTWARE | MEDIA
license = ['GPL3']
private = UNSUPPORTED
depends = ['util-linux', 'coreutils',  i_use_sh.split(':')[0]]
optdepends = ['openssh: for SSH login']
makedepends = ['make', 'sed', 'coreutils']
if i_use_info or i_use_pdf or i_use_ps or i_use_dvi:
    makedepends.append('texinfo')
source = ['%s/archive/%s.tar.gz' % (upstream, pkgver)]
sha3sums = ['D3C0562CEA994573ACB6615016E54C36823B2154C5716717E3FA4FE9F3EBBE9B45FDE7875178D8D7FD90894EB867F38A17748F4DDCEA7EBF8C4ED43DEA9088C51A9CDEA74B15F50D']

_sh = i_use_sh.split(':')[1]


def ride(private):
    execute(['info', 'gates-of-tartaros', 'setting up'])


def build(startdir, srcdir, pkgdir, private):
    cd('%s/gates-of-tartaros-%s' % (srcdir, pkgver))
    params = ['PKGNAME=%s' % pkgname, 'DESTDIR=%s' % pkgdir, 'SH=%s' % _s, 'cmd']
    if i_use_info:
        params.append('info')
    if i_use_pdf:
        params.append('pdf')
    if i_use_ps:
        params.append('ps')
    if i_use_dvi:
        params.append('dvi')
    make(params)


def package(startdir, srcdir, pkgdir, private):
    cd('%s/gates-of-tartaros-%s' % (srcdir, pkgver))
    params = ['PKGNAME=%s' % pkgname, 'DESTDIR=%s' % pkgdir, 'SH=%s' % _s, 'install-cmd']
    if i_use_info:
        params.append('install-info')
    if i_use_pdf:
        params.append('install-pdf')
    if i_use_ps:
        params.append('install-ps')
    if i_use_dvi:
        params.append('install-dvi')
    make(params)
    _dir = '%s/usr/share/licenses/%s' % (pkgdir, pkgname)
    rm('%s/LICENSE' % _dir)
    ln('/usr/share/licenses/common/GPL3', '%s/LICENSE' % _dir)


def post_install(tmpdir, rootdir, installedfiles, private):
    post_install_info(rootdir, installedfiles, private, i_use_info)


def pre_upgrade(tmpdir, rootdir, installedfiles, private):
    pre_upgrade_info(rootdir, installedfiles, private)


def post_upgrade(tmpdir, rootdir, installedfiles, private):
    post_upgrade_info(rootdir, installedfiles, private, i_use_info)


def pre_uninstall(tmpdir, rootdir, installedfiles, private):
    pre_uninstall_info(rootdir, installedfiles, private)

