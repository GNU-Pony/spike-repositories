from dragonsuite import *

i_use_man  = get('I_USE_MAN', 'y').lower().startswith('y')

pkgname = 'coopgammad'
pkgver = '1.2'
pkgdesc = 'Cooperative gamma server'
upstream = 'https://github.com/maandree/coopgammad'
arch = ['x86_64', 'i686']
freedom = SOFTWARE | MEDIA
license = ['GPL3+']
private = SUPPORTED
depends = ['libgamma', 'libc']
makedepends = ['make', 'coreutils', 'cc', 'libc', 'libgamma', 'libclut']
source = ['%s/archive/%s.tar.gz' % (upstream, pkgver)]
sha3sums = ['9BD64D4638F2B169F721D5CCBB889D470EF2834969CFE27FED7E1C75A16B947656BFA9684335E7BE45D5CF063EEF29FB8BD0E6CD3E22B1DCE0845508BEEFC3730CB03B24942EDA93']

_prefix = lambda private : '/usr' if not private else path('~/.local')


def ride(private):
    echo('You don\'t need to start coopgammad, it is started automatically when needed.')


def build(startdir, srcdir, pkgdir, private):
    cd('%s/coopgammad-%s' % (srcdir, pkgver))
    params = ['PREFIX=%s' % _prefix(private), 'PKGNAME=%s' % pkgname, 'DESTDIR=%s' % pkgdir, 'base']
    make(params)


def package(startdir, srcdir, pkgdir, private):
    cd('%s/coopgammad-%s' % (srcdir, pkgver))
    poarams = ['PREFIX=%s' % _prefix(private), 'PKGNAME=%s' % pkgname, 'DESTDIR=%s' % pkgdir, 'install-base']
    if i_use_man:
        params.append('install-man')
    make(params)
    _dir = '%s%s/share/licenses/%s' % (pkgdir, _prefix(private), pkgname)
    rm('%s/LICENSE' % _dir)
    ln('/usr/share/licenses/common/GPL3', '%s/LICENSE' % _dir)

