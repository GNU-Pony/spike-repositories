from dragonsuite import *

i_use_info = get('I_USE_INFO', 'y').lower().startswith('y')

pkgname = 'auto-auto-complete'
pkgver = '3'
pkgdesc = 'Autogenerate shell auto-completion scripts'
upstream = 'https://github.com/maandree/auto-auto-complete'
arch = ['any']
freedom = SOFTWARE | MEDIA
license = ['GPL3']
private = SUPPORTED
depends = ['python3']
makedepends = ['make', 'sed', 'coreutils']
source = ['%s/archive/%s.tar.gz' % (upstream, pkgver)]
sha3sums = ['759BEDE880B963E20DA586E3E44C02D392A30DDA916E12E57482A585CDE6C63FE1A5D9DACA9C07299C1776C77BFE109B1D648CBE1201CB1272E2EEFD338531E89032F4FCCDCDCC43']

_prefix = lambda private : '/usr' if not private else path('~/.local')


def ride(private):
    echo('Example script')
    echo('')
    cat(_prefix(private) + '/share/doc/auto-auto-complete/example')
    echo('')
    echo('Use the command auto-auto-complete')


def build(startdir, srcdir, pkgdir, private):
    cd('%s/auto-auto-complete-%s' % (srcdir, pkgver))
    make('PREFIX=%s' % _prefix(private), 'PKGNAME=%s' % pkgname, 'DESTDIR=%s' % pkgdir)


def package(startdir, srcdir, pkgdir, private):
    cd('%s/auto-auto-complete-%s' % (srcdir, pkgver))
    make('PREFIX=%s' % _prefix(private), 'PKGNAME=%s' % pkgname, 'DESTDIR=%s' % pkgdir, 'install')
    _dir = '%s%s/share/licenses/%s' % (pkgdir, _prefix(private), pkgname)
    ln('/usr/share/licenses/common/GPL3', '%s/LICENSE' % _dir)

