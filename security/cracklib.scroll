arch = ['x86_64']
freedom = SOFTWARE | MEDIA
license = ['GPL2']
private = SUPPORTED
depends = ['glibc', 'zlib']
makedepends = ['zlib', 'sh', 'coreutils', 'sed', 'make', 'm4', 'glibc', 'gcc', 'bash']
