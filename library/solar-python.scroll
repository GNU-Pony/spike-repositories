from dragonsuite import *

pkgname = 'solar-python'
pkgver = '2.1'
pkgdesc = 'Solar data calculation and prediction library for Python'
upstream = 'https://github.com/maandree/solar-python'
arch = ['any']
freedom = SOFTWARE | MEDIA
license = ['AGPL3']
private = SUPPORTED
depends = ['python3']
makedepends = ['make', 'coreutils', 'python3']
source = ['%s/archive/%s.tar.gz' % (upstream, pkgver)]
sha3sums = ['5C2E47B21B7A95FCA8860612EABA33C6A69158DCECF6F6072ABA97457794896578BAD07469D1A317DBA6E1BC49BA290810C433071164835CED8A8BA96E6B7F18C3BC8450148397A9']

_prefix = lambda private : '/usr' if not private else path('~/.local')


def ride(private):
    echo('This is a library, all documentation is available in the source')
    echo('and a doc strings that can be read with the help function in python.')
    echo('')
    echo('  python')
    echo('  >>> import solar_python')
    echo('  >>> help(solar_python)')


def build(startdir, srcdir, pkgdir, private):
    cd('%s/solar-python-%s' % (srcdir, pkgver))
    params = ['PREFIX=%s' % _prefix(private), 'PKGNAME=%s' % pkgname, 'DESTDIR=%s' % pkgdir]
    params += ['PY_MAJOR=3', 'PY_MINOR=4']
    make(params)


def package(startdir, srcdir, pkgdir, private):
    cd('%s/solar-python-%s' % (srcdir, pkgver))
    params = ['PREFIX=%s' % _prefix(private), 'PKGNAME=%s' % pkgname, 'DESTDIR=%s' % pkgdir]
    params += ['PY_MAJOR=3', 'PY_MINOR=4']
    make(params + ['install'])
    _dir = '%s%s/share/licenses/%s' % (pkgdir, _prefix(private), pkgname)
    ln('/usr/share/licenses/common/GPL3', '%s/LICENSE' % _dir)

