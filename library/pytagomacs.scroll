from dragonsuite import *

pkgname = 'pytagomacs'
pkgver = '1417073566'
pkgdesc = 'An Emacs like keyâ€“value editor library for Python'
upstream = 'https://github.com/GNU-Pony/pytagomacs'
arch = ['any']
freedom = SOFTWARE | MEDIA
license = ['GPL3']
private = SUPPORTED
depends = ['python3', 'coreutils']
makedepends = ['make', 'coreutils', 'python3']
source = ['%s/archive/%s.tar.gz' % (upstream, pkgver)]
sha3sums = ['F6902263695C95F8A7945F45A51BFA16022FA46AE5B1817D14C89AC94E1856D80507B43CDAB261942AB96B099F717B7A27093587A90548186D6088EB4B525D2F6699F2771CFC84BB']

_prefix = lambda private : '/usr' if not private else path('~/.local')


def ride(private):
    echo('This is a library')


def build(startdir, srcdir, pkgdir, private):
    cd('%s/pytagomacs-%s' % (srcdir, pkgver))
    params = ['PREFIX=%s' % _prefix(private), 'PKGNAME=%s' % pkgname, 'DESTDIR=%s' % pkgdir]
    params += ['PY_MAJOR=3', 'PY_MINOR=4']
    make(params)


def package(startdir, srcdir, pkgdir, private):
    cd('%s/pytagomacs-%s' % (srcdir, pkgver))
    params = ['PREFIX=%s' % _prefix(private), 'PKGNAME=%s' % pkgname, 'DESTDIR=%s' % pkgdir]
    params += ['PY_MAJOR=3', 'PY_MINOR=4']
    make(params + ['install'])
    _dir = '%s%s/share/licenses/%s' % (pkgdir, _prefix(private), pkgname)
    ln('/usr/share/licenses/common/GPL3', '%s/LICENSE' % _dir)

